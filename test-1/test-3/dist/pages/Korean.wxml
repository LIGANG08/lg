
  <view class="container">
    <view class="photo">
    <view class="k_goods">
      <view class="kgoods"  wx:for="{{korean}}" wx:key="index">
        <image class="k_pic" src="{{item.k_pic}}" id="{{index}}" bindtap="lagoods"/>
        <text class="k_introduce">{{item.k_int}}</text>
        <text class="k_price">{{item.k_price}}</text>
        <text class="k_number">{{item.k_number}}</text>
        <image class="k_collect" src="{{item.acollect ? '../images/bcollect.png' : notcollect}}" id="{{index}}" bindtap="collect"/>
      </view>
     </view> 
  </view>
  </view>