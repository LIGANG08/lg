
.container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #383838;
  background-size: 100% 100%;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 0.625rem;
}

image {
  width: 8.75rem;
  height: 9.375rem;
}

.kla,
.klb,
.klc,
.kld,
.kra,
.krb,
.krc,
.krd {
