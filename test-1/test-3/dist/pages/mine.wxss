
.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: salmon;
  padding: 0.625rem;
}

.mpic {
  width: 3.75rem;
  height: 3.75rem;
  border-radius: 50%;
}

.main {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: silver;
  font-size: 0.81rem;
  padding: 0.3rem 0;
}

.main image {
  width: 1.875rem;
  height: 1.875rem;
  padding: 0.3rem 0;
}

.address,
.order,
.cart,
.collect {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mysaddress {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.mycorder,
.mycart,
.mycollect {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 2.5rem;
}

.body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0.7rem;
}
.mynickname,
.mycode,
.mypay,
.mygoods,
.myappraise,
.mynews {
  display: flex;
  border-bottom: 1px solid silver;
  width: 100%;
  padding: 0.7rem 0;
}

.myfeedback {
  display: flex;
  border-top: 0.7rem solid silver;
  /* width: 100%; */
  background-color: seashell;
  padding: 0.7rem;
}
.mynpic {
  width: 1.25rem;
  height: 1.25rem;
}
.mnickname {
  color: silver;
  font-size: 0.9375rem;
}
