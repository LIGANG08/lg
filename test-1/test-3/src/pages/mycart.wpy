        <view class="box_b">
          <text class="subtraction" @tap="subtraction" value="{{item.number ? '' : number}}" id="{{index}}">{{item.subtraction}}</text>
          <text class="number">{{item.number}}</text>
          <text class="add" @tap="add" value="{{item.add ? '' : number}}" id="{{index}}">{{item.add}}</text>
